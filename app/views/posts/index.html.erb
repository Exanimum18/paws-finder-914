<div class="container mt-5 ">

<div class=" text-center">
    <%= link_to "Publica tu peludo", new_post_path, class: "btn btn-danger" %>
  </div>
<br>
  <div class="col-4 text-center">
    <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Busca a tu peludito"%>
      <%= submit_tag "Buscar", class: "btn btn-flat" %>
    <% end %>
  </div>


<br>


  <div>
      <div class="row">
        <div class="col-md-4">
        <% @posts.each do |post| %>
          <div class="card" style="width: 20rem ">
            <% if post.photos.attached?%>
                <%= link_to post_path(post) do %>
                  <%= cl_image_tag post.photos.first.key, height: 300, width: 400, crop: :fill %>
                <% end %>
            <% end %>
            <p> <%= post.title %> </p>
            <p> <%= Animal.find(post.animal_id).specie %> </p>
            <p> <%= post.address %> </p>
            <p> <%= post.description %> </p>
            <p> <%= post.reward ? 'Si' : 'No' %> </p>
          </div>
        <% end %>
        </div>
      </div>
  </div>


</div>

<footer><%= render "shared/footer" %></footer>
