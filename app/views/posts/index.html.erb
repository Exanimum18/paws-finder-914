<div class="container mt-5">

  <%= form_with url: posts_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an animal"%>
    <%= submit_tag "Search", class: "btn btn-danger" %>
  <% end %>

  <%= link_to "Publica tu peludo", new_post_path, class: "btn btn-danger" %>

  <div class="row">
    <div class="col-md-4">
      <% @posts.each do |post| %>
        <div class="card" style="width: 20rem ">
          <% if post.photos.attached?%>
            <% post.photos.each do |photo| %>
              <%= link_to post_path(post) do %>
                <%= cl_image_tag post.photos.first.key, height: 300, width: 400, crop: :fill %>
              <% end %>
            <% end %>
          <% end %>
          <p> <%= post.title %> </p>
          <p> <%= Animal.find(post.animal_id).specie %> </p>
          <p> <%= post.address %> </p>
          <p> <%= post.description %> </p>
          <p> <%= post.reward ? 'Si' : 'No' %> </p>
        </div>
      <% end %>

    </div>
  </div>
</div>
