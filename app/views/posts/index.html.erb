
<div class="container">
  <div>
    <div class="shadow p-3 mb-5 bg-white rounded">
      <h3 class="text-center mt-5 azul" id="titulo"> Para todos los peludos que necesiten volver a casa, perdidos o encontrados </h3>

      <div class=" text-center m-3">
          <%= link_to "Publica tu peludo", new_post_path, class: "btn btn-red" %>
      </div>
    </div>
    <br>
    <br>
    <h1 class="text-center rojo mb-5" id="titulo"> Estos peludos buscan su casa </h1>
    <div class="row justify-content-around ">
        <% @posts.each do |post| %>
        <div class="col-lg-4 m-3">
          <div class="card shadow mb-5 bg-white rounded text-center d-flex justify-content-between" style="width: 400px ">
            <% if post.photos.attached?%>
                <%= link_to post_path(post) do %>
                  <%= cl_image_tag post.photos.first.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                <% end %>
            <% end %>

            <h5 class="card-title mt-3" id="titulo"> <%= post.title %> </h5>
            <p> <%= post.address %> </p>
            <p> <%= post.description %> </p>
            <p> <%= post.post_type ? 'Perdido' : 'Encontrado' %>  </p>
            <p> <%=post.reward ?  'Se ofrece recompensa' : '' %> </p>

          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
