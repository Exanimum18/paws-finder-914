<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2  class="text-center mb-3">Publica un peludo</h2>
        <%= simple_form_for @post do |f| %>
         <!-- #perdido = true encontrado = false-->
          <%= f.label(:post_type, "Encontrado") %>
          <%= f.radio_button(:post_type, "Encontrado") %>
          <%= f.label(:post_type, "Perdido") %>
          <%= f.radio_button(:post_type, "Perdido")%>
          <%= f.input :title, label: "Nombre de la publicación:" %>
          <%= f.input :address, label: "Dirección donde se vió el peludo:",
          input_html: {data: {address_autocomplete_target: "address"}},
          wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>
          <%= f.input :description, label: "Descripción física" %>
          <%= f.association :animal, label_method: :specie %>
          <%= f.input :reward, label: "Recompensa",
            input_html: { autocomplete: "Recompensa?" }%>
          <%= f.input :photos,label:"Fotos actualizadas del peludo", as: :file, input_html: {multiple: true} %>
         <div class="text-center"> <%= f.button :submit, "Crear publicación", class: 'btn btn-red ' %> </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
