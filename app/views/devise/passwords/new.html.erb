<div
  class="background-password ">
  <div class="container d-flex justify-content-center ajuste-footer">
    <div class="user-form-forgot-password text-center background-form mb">
      <div class="glass ">
        <h2>¿Olvidaste tu contraseña?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email, label: "Correo electrónico",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Envíame instrucciones para cambiar mi contraseña", class:"btn btn-red mr-1 mb-1" %>
          </div>

          <div class="btn-group" role="group">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
