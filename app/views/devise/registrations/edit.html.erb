
  <div class="background-edit-user">
    <div class="container d-flex justify-content-center">
      <div class="user-form-edit-user">
        <div class="glass">
          <h2 class="text-center" >Editar Contraseña</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
              <%= f.input :current_password, label: "Contraseña actual",
                                      hint: "Necesitamos tu contraseña actual para efectuar los cambios",
                                      required: true,
                                      input_html: { autocomplete: "current-password" } %>

              <%= f.input :password, label:"Contraseña nueva",
                          hint: "",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation, label: "Confirmar contraseña",
                          required: false,
                          input_html: { autocomplete: "new-password" } %>

            </div>
            <br>
            <div class="d-flex align-items-center">
              <div class="form-actions text-center">
                <%= f.button :submit, "Actualizar", class:"btn btn-flat text-center mr-1 " %>
              </div>
              <div  role="group">
              <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro/a?" }, method: :delete, class: "btn btn-danger " %>
              <%= link_to "Regresar", :back, class: "btn btn-flat mr-1" %>
          <% end %>
          </div


        </div>

        </div>
      </div>
    </div>
  </div>
